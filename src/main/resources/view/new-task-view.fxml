<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="mainBorderPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.marcin.jacek.polewski.Task_Manager_Project.controller.NewTaskController">
   <center>
      <VBox fx:id="mainVBox" maxHeight="400.0" maxWidth="400.0" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="sceneTitle" text="New Task" />
            <VBox>
               <children>
                  <Label fx:id="taskTitleLabel" text="Title" />
                  <TextField fx:id="titleTextField" />
               </children>
            </VBox>
            <HBox>
               <children>
                  <VBox maxWidth="1.7976931348623157E308">
                     <children>
                        <Label fx:id="scheduledExecutionLabel" prefHeight="14.0" prefWidth="146.0" text="Scheduled execution" />
                        <DatePicker fx:id="scheduledDatePicker" />
                        <ComboBox fx:id="scheduledTimePicker" maxWidth="1.7976931348623157E308" promptText="18:00" />
                     </children>
                  </VBox>
                  <VBox maxWidth="1.7976931348623157E308">
                     <children>
                        <Label fx:id="dueDateLabel" text="Label" />
                        <DatePicker fx:id="dueDatePicker" />
                        <ComboBox fx:id="dueTimePicker" maxWidth="1.7976931348623157E308" prefWidth="150.0" />
                     </children>
                  </VBox>
               </children>
            </HBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label fx:id="notesLabel" text="Notes" />
                  <TextArea fx:id="notesTextArea" prefHeight="200.0" prefWidth="200.0" />
               </children>
            </VBox>
            <VBox prefHeight="200.0" prefWidth="100.0">
               <children>
                  <Label fx:id="folderLabel" text="Folder" />
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <ScrollPane fx:id="directoryScrollPane" prefHeight="200.0" prefWidth="200.0" />
                        <VBox prefHeight="200.0" prefWidth="100.0">
                           <children>
                              <Button fx:id="addSubTaskButton" mnemonicParsing="false" onAction="#addSubTaskButtonPressed" text="+" />
                              <ScrollPane fx:id="subTasksScrollPane" prefHeight="74.0" prefWidth="240.0" />
                           </children>
                        </VBox>
                     </children>
                  </HBox>
               </children>
            </VBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Button fx:id="addSubtaskButton" mnemonicParsing="false" text="add sub task" />
                  <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#cancelButtonPressed" text="cancel" />
                  <Button fx:id="saveTaskButton" mnemonicParsing="false" onAction="#saveButtonPressed" text="save task" />
               </children>
            </HBox>
         </children>
      </VBox>
   </center>
</BorderPane>
